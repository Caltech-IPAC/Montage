{
   "module":"mPutHdr",

   "function":"mPutHdr",

   "desc" : "mPutHdr takes an input FITS file and a new header and creates a new FITS file from them.",

   "arguments":
   [
      {"type":"string",                    "name":"input_file",    "desc":"Input FITS file."},
      {"type":"string",                    "name":"output_file",   "desc":"Output FITS file."},
      {"type":"string",                    "name":"template_file", "desc":"New header to replace that from the input in the output."},
      {"type":"int",     "default":0,      "name":"hdu",           "desc":"Optional HDU offset for input file."},
      {"type":"int",     "default":0,      "name":"debug",         "desc":"Debugging output level."} 
   ],
   
   "return":
   [
      {"type":"int",                       "name":"status",        "desc":"Return status (0: OK, 1:ERROR)."},
      {"type":"string",                    "name":"msg",           "desc":"Return message (for errors)."}
   ]
}
